<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse" style="margin-top:-50px">
        <div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li> <a style="font-family:'Javanese Text'; font-size:xx-large">Component Library Store</a></li>
                </ul>
               
            </div>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav" style="float:right !important">
                <li><a href="~/Home/Index"><span class="glyphicon glyphicon-log-out"></span>Logout</a></li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Component Library Store</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
